// Order
model Order {
  id                String @id @default(cuid())
  userId            String
  shippingAddressId String

  amount         Int
  isPaid         Boolean  @default(false)
  shippingMethod String
  shippingStatus String?  @default("pending")
  orderDate      DateTime @default(now())

  user            User             @relation(fields: [userId], references: [id])
  shippingAddress ShippingAddress? @relation(fields: [shippingAddressId], references: [id])
  items           OrderItem[]

  payment Payment? // back-relation only

  @@index([userId])
}

// Payment
model Payment {
  id                         String   @id @default(cuid())
  userId                     String
  orderId                    String   @unique // 1-to-1 with Order
  paymongo_payment_id        String
  paymongo_checkout_id       String
  paymongo_payment_intent_id String
  amount                     Int
  tax                        Int
  shipping                   Int
  payer_name                 String
  payer_email                String
  payer_phone                String
  date                       DateTime @default(now())
  method                     String
  currency                   String
  line_items                 Json[]

  user  User  @relation(fields: [userId], references: [id])
  order Order @relation(fields: [orderId], references: [id])
}

// OrderItem
model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  variantId String? // ðŸ‘ˆ KEY ADDITION
  quantity  Int
  name      String
  price     Int

  order   Order           @relation(fields: [orderId], references: [id])
  product Product         @relation(fields: [productId], references: [id])
  variant ProductVariant? @relation(fields: [variantId], references: [id])

  @@index([orderId])
  @@index([productId])
  @@index([variantId])
}

// ShippingAddress
model ShippingAddress {
  id     String @id @default(cuid())
  userId String

  fullName    String
  phoneNumber String
  zipcode     String
  area        String
  city        String
  province    String
  orders      Order[]
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model StockReservation {
  id        String          @id @default(cuid())
  productId String
  variantId String?
  product   Product         @relation(fields: [productId], references: [id], onDelete: Cascade)
  variant   ProductVariant? @relation(fields: [variantId], references: [id])
  userId    String
  quantity  Int
  createdAt DateTime        @default(now())
  expiresAt DateTime
  fulfilled Boolean         @default(false)
  restored  Boolean         @default(false)
  meta      Json?

  @@index([variantId])
}
